<div class="main rooms-manager-edit">
  <div class="container">
    <div class="form-heading">管理者の変更</div>
    <div class="form room-manager-edit-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_with(url: change_room_manager_path(params[:room_id]), local: true) do |form| %>
          <p>管理者にするユーザーの情報を入力してください。</p><br>
          <p>名前</p>
          <%= form.text_field :name, value: @name %>
          <p>メールアドレス</p>
          <%= form.text_field :email, value: @email %>
          <%= form.submit value: "管理者にする" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

