<div class="main groups-login">
  <div class="container">
    <div class="form-heading">管理者ログイン</div>
    <div class="form groups-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        
        <%= form_with(url: manager_login_path, local: true) do |form| %>
          <div class="form-group">
            <label>メールアドレス</label>
            <%= form.text_field :email, value: @email, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>パスワード</label>
            <%= form.password_field :password, class: "form-control" %>
          </div>
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>

