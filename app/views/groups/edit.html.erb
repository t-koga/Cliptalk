<div class="main groups-edit">
  <div class="container">
    <div class="form-heading">グループ編集</div>
    <div class="form group-edit-form">
      <div class="form-body">
        <% @group.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with(url: update_group_path(@current_group.url), local: true) do |form| %>
          <div class="form-group">
            <label>グループURL<span class="small">　※[アルファベット,数字,ハイフン,アンダーバー]のみ使用できます</span></label>
            <div class="input-group-prepend">
              <span class="input-group-text"><%= request.host_with_port+"/groups/" %></span>
              <%= form.text_field :url, value: @group.url, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <label>グループ名</label>
            <%= form.text_field :name, value: @group.name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>メールアドレス<span class="small">　※架空のアドレスでも可 (例:○○@mail)</span></label>
            <%= form.text_field :email, value: @group.email, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>パスワード</label>
            <%= form.password_field :password, class: "form-control" %>
          </div>
          <%= form.submit value: "編集" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

