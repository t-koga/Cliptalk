<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with(url: create_user_path, local: true) do |form| %>
          <div class="form-group">
            <label>名前</label>
            <%= form.text_field :name, value: @name, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>メールアドレス <span class="small">　※架空のアドレスでも可 (例:○○@mail)</span></label>
            <%= form.text_field :email, value: @email, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>パスワード</label>
            <%= form.password_field :password, class: "form-control" %>
          </div>
          <input type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>

