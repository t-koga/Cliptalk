<div class="main articles-edit">
  <div class="container">
    <div class="form-heading">
      <%= link_to(@article_title, show_article_path(params[:room_id], params[:article_id])) %> > 
      クリップ編集
    </div>
    <div class="form article-edit-form">
      <div class="form-body">
        <% @article.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with(url: update_article_path(params[:room_id], params[:article_id]), local: true) do |form| %>
          <div class="form-group">
            <label>タイトル</label>
            <%= form.text_field :title, value: @article.title, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>内容</label>
            <%= form.text_area :content, value: @article.content, size: "20x10", class: "form-control" %>
          </div>
          <%= form.submit value: "更新" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

