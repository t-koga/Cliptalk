<div class="main articles-new">
  <div class="container">
    <div class="form-heading">
      <%# 画像機能見送り%>
      <%# if @room.icon.attached? %>
        <%#= image_tag @room.thumbnail_small %>
      <%# end %>
      <%= link_to(@room.name, articles_path(@room.id)) %> > 
      クリップ作成
    </div>
    <div class="form articles-form">
      <div class="form-body">
        <% @article.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with(url: create_article_path, local: true) do |form| %>
          <div class="form-group">
            <label>タイトル</label>
            <%= form.text_field :title, value: @title, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>内容</label>
            <%= form.text_area :content, value: @content, size: "20x10", class: "form-control" %>
          </div>
          <input type="submit" value="作成">
        <% end %>
      </div>
    </div>
  </div>
</div>

